{{#if_neq InvalidLineItemCount 0}}
<div class="card">
    <div class="card-header"> 
        <div class="row">
            <div class="col-10">
                <h5 data-qa="checkout-header-cart-details">{{localize 'ShoppingCart' 'T_UnavailableItems'}}</h5>
            </div>
            <div class="col-2">
                <a href="{{OrderSummary.CheckoutStepUrls.[0]}}" class="float-right" title="{{localize 'CheckoutProcess' 'B_Edit'}}"><span class="fa  fa-pencil  fa-lg"></span></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        {{#if GettingCart}}
            {{>Loading}}
        {{else}}
                {{#if_neq InvalidLineItemCount 0}}
                    <div class="alert alert-danger">
                            <div class="multiline-message  text-danger">
                                <span class="fa  fa-exclamation-triangle  multiline-message-icon"></span>
                                <span>{{InvalidLineItemCount}} {{localize 'ShoppingCart' 'L_NoMoreAvailable'}}</span>
                            </div>
                    </div>
                {{/if_neq}}

                {{#each LineItemDetailViewModels}}
                    {{#unless IsValid}}
                          {{>CheckoutCompleteCartLineItem}}
                    {{/unless}}
        	    {{/each}}
        {{/if}}
    </div>
</div>
{{/if_neq}}

{{#if_neq InvalidLineItemCount LineItemCount}}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-10">
                <h5 data-qa="checkout-header-cart-details">{{localize 'MyAccount' 'T_CartDetails'}}</h5>
            </div>
            <div class="col-2">
                <a href="{{OrderSummary.CheckoutStepUrls.[0]}}" class="float-right" title="{{localize 'CheckoutProcess' 'B_Edit'}}"><span class="fa  fa-pencil  fa-lg"></span></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        {{#if GettingCart}}
            {{>Loading}}
        {{else}}
                {{#each LineItemDetailViewModels}}
            	    {{#if IsValid}}
                          {{>CheckoutCompleteCartLineItem}}
                    {{/if}}
            	{{/each}}
        {{/if}}
    </div>
</div>
{{/if_neq}}
