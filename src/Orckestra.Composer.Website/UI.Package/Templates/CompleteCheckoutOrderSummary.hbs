<div data-templateid="CompleteCheckoutOrderSummary">
    <div class="card">
        <h5 class="card-header">{{localize 'ShoppingCart' 'T_OrderSummary'}}</h5>
        <div class="card-body">
            {{#if GettingCart}}
                {{> Loading}}
            {{else}}
               {{> CheckoutOrderSummaryDetails}}

                <div class="row">
                    <div class="col-12">
                        <hr>

                        <p class="text-center">{{localize 'CheckoutProcess' 'L_SubmitOrderIndication'}}</p>


                        {{#if InvalidLineItemCount}}
                            <div class="form-group">
                        {{/if}}

                        <button class="btn  btn-success  btn-lg  btn-block {{#if InvalidLineItemCount}}disabled{{/if}}" data-oc-click="nextStep" {{#if InvalidLineItemCount}}disabled="disabled"{{/if}}
                             data-nextstepurl="{{OrderSummary.CheckoutCompleteUrlTarget}}">
                            {{localize 'CheckoutProcess' 'B_SubmitOrder'}}
                            <span class="loading-indicator  fa  fa-spin  fa-fw  fa-circle-o-notch  d-none"></span>
                        </button>

                        {{#if InvalidLineItemCount}}
                            </div>
                        {{/if}}

                        {{#if InvalidLineItemCount}}
                            <span class="text-danger">
                                {{localize 'CheckoutProcess' 'L_InvalidCart'}}
                                <a href="{{OrderSummary.EditCartUrlTarget}}">
                                    {{localize 'CheckoutProcess' 'H_CheckCart'}}
                                </a>
                            </span>
                        {{/if}}
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>