<div  data-templateid="CheckoutOrderSummary">
    {{#if LoadCheckoutOrderSummary }}
        <div class="card">
            {{#if GettingCart}}
                <h5 class="card-header" data-qa="order-summary-title">{{localize 'ShoppingCart' 'T_OrderSummary'}}</h5>
                <div class="card-body">
                    {{>Loading}}
                </div>
            {{else}}
                <h5 class="card-header" data-qa="order-summary-title">{{localize 'ShoppingCart' 'T_OrderSummary'}}</h5>
                <div class="card-body">
                    <div>
                        <span data-qa="checkout-order-summary-number-of-products">{{TotalQuantity}} {{localize 'CheckoutProcess' 'L_Products'}}</span>
                        (<a href="{{OrderSummary.EditCartUrlTarget}}" data-qa="checkout-order-summary-edit-order">{{localize 'CheckoutProcess' 'B_EditShoppingCart'}}</a>)
                    </div>

                    <hr class="bleed" />

                    {{>CheckoutOrderSummaryDetails}}

                    <div class="row">
                        <div class="col-12">
                            {{#if InvalidLineItemCount}}
                                <div class="form-group">
                            {{/if}}

                            <button class="btn  btn-success  btn-lg  btn-block" data-qa="checkout-order-summary-next-step"
                            {{#if InvalidLineItemCount}}disabled="disabled"{{/if}} data-oc-click="nextStep" data-nextstepurl="{{OrderSummary.NextStepUrl}}">
                                {{localize 'CheckoutProcess' 'B_NextStep'}}
                            <span class="loading-indicator  fa  fa-spin  fa-fw  fa-circle-o-notch  d-none"></span>
                            </button>

                            {{#if InvalidLineItemCount}}
                                </div>
                            {{/if}}

                            {{#if InvalidLineItemCount}}
                                <span class="text-danger">
                                    {{localize 'CheckoutProcess' 'L_InvalidCart'}}
                                    
                                    <a href="{{OrderSummary.EditCartUrlTarget}}">
                                        {{localize 'CheckoutProcess' 'H_CheckCart'}}
                                    </a>
                                </span>
                            {{/if}}
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
    {{/if}}
</div>