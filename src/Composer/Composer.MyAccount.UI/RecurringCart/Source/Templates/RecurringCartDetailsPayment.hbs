<div data-templateid="RecurringCartDetailsPayment">
    <div class="panel  panel-default">
        {{#if IsLoading}}
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-10">
                        <h2 class="h3">{{localize 'MyAccount' 'T_PaymentMethod' }}</h2>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                {{>Loading}}
            </div>
        {{else}}
            {{#unless EditMode}}
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-10">
                        <h2 class="h3">{{localize 'MyAccount' 'T_PaymentMethod' }}</h2>
                    </div>
                    <div class="col-xs-2">
                        <button class="btn btn-link pull-right" type="button" 
                        data-selected-payment-id="{{Payment.PaymentMethod.Id}}"
                        data-oc-click="toggleEditPayment" 
                        title="{{localize 'CheckoutProcess' 'B_Edit'}}">
                            <span class="fa  fa-pencil  fa-lg"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                {{#if Payment}}
                <div class="row payment">
                    <div class="col-xs-12">
                        {{#with Payment.PaymentMethod}}
                        <div class="col-xs-3  col-sm-3  col-md-3">
                            {{#if CardMask}}
                                <img src="/UI.Package/Images/creditcards/{{CardType}}.png" alt="{{CardType}}" class="img-responsive" />
                            {{else}}
                                <img src="/UI.Package/Images/payments/cash.png" alt="Cash" class="img-responsive" />
                                <!-- <img src="img/giftcard.png" alt="Gift Card" class="img-responsive"> -->
                            {{/if}}
                        </div>
                        <div class="col-xs-9  col-sm-9  col-md-9">
                            <p>
                                <h2 class="h4">{{localize 'MyAccount' 'L_PaymentMethod'}}</h2>
                                {{#if CardMask}}
                                    {{localize 'MyAccount' 'L_CreditCardNumber' }} {{CardMask}}
                                    <br />{{localize 'MyAccount' 'L_CreditCardExpires' }} {{ExpiryDate}}
                                {{else}}
                                    {{PaymentType}}
                                {{/if}}
                            </p>
                        </div>
                        {{#if IsExpired}}
                            <div class="row">
                                <div class="col-sm-12 error-item strong">
                                    {{localize 'CheckoutProcess' 'F_SaveCreditCardForced_Expired' }}
                                </div>
                            </div>
                        {{/if}}
                        {{/with}}
                    </div>
                </div>
                {{else}}
                <div class="row payment">
                    <div class="col-md-12 text-center">
                        <p>{{localize 'General' 'P_PaymentLoadErrorMessage' }}</p>
                    </div>
                </div>
                {{/if}}
            </div>
            {{else}}        
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-10">
                        <h2 class="h3">{{localize 'MyAccount' 'T_PaymentMethod' }}</h2>
                    </div>
                    <div class="col-xs-2">
                        <button class="btn btn-link pull-right invisible" type="button" 
                        data-selected-payment-id="{{Payment.PaymentMethod.Id}}"
                        title="{{localize 'CheckoutProcess' 'B_Edit'}}">
                            <span class="fa  fa-pencil  fa-lg"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="panel-body">    
                {{>FormErrorMessages}}           
                {{#if_gt SavedCreditCards.length 0}}
                    <div id="moneris-saved-credit-cards" class="moneris-panel">
                        <div class="row">
                            <div class="col-sm-12">
                                <h4>{{localize 'CheckoutProcess' 'T_SelectCreditCart'}}</h4>        
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-12">
                                {{>RecurringCartSavedCreditCartPaymentMethod}}
                            </div>
                        </div>
                    </div>
                {{/if_gt}}
                        
                <div class="col-xs-12 text-center">
                    <button class="btn btn-default" type="button" 
                        data-oc-click="toggleEditPayment">{{localize 'General' 'B_Cancel'}}</button>
                    <button class="btn btn-primary"
                        data-oc-click="saveEditPayment">{{localize 'MyAccount' 'B_SaveChanges'}}
                        <span class="loading-indicator  fa  fa-spin  fa-fw  fa-circle-o-notch  hidden"></span>
                    </button>
                </div>
            </div>            
            {{> RecurringCartPaymentConfirmationModal}}
            {{/unless}}
        {{/if}}
    </div>
</div>