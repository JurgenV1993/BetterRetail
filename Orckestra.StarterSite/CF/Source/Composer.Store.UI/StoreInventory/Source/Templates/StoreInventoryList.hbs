<div class="row" data-templateid="StoreInventoryList">
    {{#if IsLoading}}
        {{>Loading}}
    {{else}}
        {{#if Stores}}
            {{#each Stores}}
                <div class="col-lg-6">
                    {{> StoreInventoryTile}}
                </div>
            {{/each}}
        {{else}}
            <p class="lead  text-center">{{localize 'Store' 'L_InventoryUnavailable'}}</p>
        {{/if}}
        {{#if NextPage}}
            {{#with NextPage}}
                <div class="col-sm-12 stores-list-paging">
                    <button data-qa="next-page"
                            data-page="{{Page}}"
                            data-oc-click="nextPage"
                            class="btn  btn-outline-secondary">
                        {{localize 'Store' 'B_ShowMore'}}
                        <span class="loading-indicator  fa  fa-spin  fa-fw  fa-circle-o-notch  hidden" aria-hidden="true"></span>
                    </button>
                </div>
            {{/with}}
        {{/if}}
    {{/if}}
</div>

