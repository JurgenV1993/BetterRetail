<div data-oc-controller="Store.Locator" id="storeLocator" class="store-locator" data-context="{{JsonContext}}" xmlns="http://www.w3.org/1999/xhtml">
    <div class="container">
        <div class="store-locator-search  form-horizontal">
            <div class="row form-group">
                <div class="col-12  col-md-6  col-lg-4">
                    <label for="storeLocatorSearchInput" class="sr-only">{{localize 'Store' 'L_FindStore'}}</label>
                    <input id="storeLocatorSearchInput"
                           name="storeLocatorSearchInput"
                           class="form-control" type="text"
                           placeholder="{{localize 'Store' 'I_Placeholder'}}"
                           value="{{PostedAddress}}"/>
                    <i class="fa  fa-search  text-muted" aria-hidden="true"></i>
                </div>
                <div class="col-12  col-md-6  col-lg-4">
                    <span class="label-or">- {{localize 'Store' 'L_OrUseMyLocation'}} -</span>
                    <button
                            data-oc-click="currentLocationAction"
                            class="btn  btn-primary  geolocate-btn">
                        <i class="fa  fa-crosshairs" aria-hidden="true"></i>
                        {{localize 'Store' 'B_UseMyLocation'}}
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div id="map" class="map" aria-hidden="true"></div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12  clearfix  store-locator-info">
                <div id="store-locator-nearest" class="hidden float-md-left">{{localize 'Store' 'L_NearestStore'}}</div>
                <div class="float-md-right"><a href="{{StoresDirectoryUrl}}">{{localize 'Store' 'H_ViewAllStores'}}</a></div>
            </div>
        </div>
        <div id="storesList">
            {{> StoresList}}
        </div>
    </div>
</div>