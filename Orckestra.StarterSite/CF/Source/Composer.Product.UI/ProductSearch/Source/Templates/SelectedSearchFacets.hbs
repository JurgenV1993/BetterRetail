<div data-oc-controller="Product.SelectedSearchFacets">
{{#if SelectedFacets.Facets }}
    <div id="selectedFacets" class="card">
        <div class="card-body" role="region" aria-label="{{localize 'List-Search' 'L_Selection'}}">
            <h2 class="h4">{{localize 'List-Search' 'L_Selection'}}</h2>
            {{#if SelectedFacets.IsAllRemovable }}
                <p class="clearfix"><a class="pull-right  small" data-qa="search-refiners-clear-all" href="#" {{#if ../../LandingPageUrls}}data-landingpageurl="{{../../LandingPageUrls.[0]}}"{{/if}} data-oc-click="clearSelectedFacets">{{localize 'List-Search' 'B_ClearAll'}}</a></p>
            {{/if}}
            <ul class="list-unstyled">
                {{#each SelectedFacets.Facets}}
                    <li>
                        <div class="row">
                            <div class="col-sm-10">
                                {{DisplayName}}
                            </div>
                            <div class="col-sm-2">
                                {{#if IsRemovable}}
                                    <a href="#"
                                       class="pull-right"
                                       data-qa="search-refiner-remove"
                                       data-facetfieldname="{{FieldName}}"
                                       data-facettype="{{FacetType}}"
                                       data-facetvalue="{{Value}}" {{#if ../../../LandingPageUrls}}data-facetlandingpageurl="{{lookup ../../../LandingPageUrls @index}}"{{/if}}
                                       title="{{localize 'List-Search' 'B_Remove'}} {{DisplayName}}"
                                       data-oc-click="removeSelectedFacet">
                                        <span class="fa  fa-times  fa-lg" aria-hidden="true"></span>
                                        <span class="sr-only">{{localize 'List-Search' 'B_Remove'}} {{DisplayName}}</span>
                                    </a>
                                {{else}}
                                    <span class="pull-right  fa  fa-times  fa-lg  text-muted" aria-hidden="true"></span>
                                {{/if}}
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
{{/if}}
</div>