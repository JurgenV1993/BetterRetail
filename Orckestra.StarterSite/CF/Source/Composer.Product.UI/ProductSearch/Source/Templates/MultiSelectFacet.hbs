{{#if Quantity}}
    <li>
        <div class="checkbox">
            <label>
                {{#if IsSelected}}
                    <input type="checkbox" name="{{../../../FieldName}}[]" value="{{Value}}" data-oc-click="multiFacetChanged" checked="checked" aria-checked="true" aria-label="{{Title}}" />
                {{else}}
                    <input type="checkbox" name="{{../../../FieldName}}[]" value="{{Value}}" data-oc-click="multiFacetChanged" aria-checked="false" aria-label="{{Title}}" />
                {{/if}}
                {{Title}}&#160;({{Quantity}})
            </label>
        </div>
    </li>
{{/if}}