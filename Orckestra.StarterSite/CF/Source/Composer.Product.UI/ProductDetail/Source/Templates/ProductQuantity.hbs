{{#if Quantity}}
<div data-templateid='ProductQuantity'>
    {{#with Quantity}}
    <div class="form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <button class="btn  btn-outline-secondary" aria-hidden="true"
                    {{#if_eq ../Disabled false}}
                        {{#if_eq Value Min}}
                        disabled="disabled"
                        {{else}}
                        data-oc-click="decrementQuantity"
                        {{/if_eq}}
                    {{else}}
                        disabled="disabled"
                    {{/if_eq}}
                        data-qa="product-quantity-decrease" tabindex="-1">
                    <span class="fa  fa-minus"></span>
                    <span class="sr-only">{{localize 'ProductPage' 'B_Decrement'}}</span>
                </button>
            </div>
            <label for="product-quantity" class="sr-only">{{localize 'MyAccount' 'L_Quantity'}}</label>
            <input class="form-control  text-center"
                   id="product-quantity"
                   name="product-quantity"
                   type="text"
                   data-qa="product-quantity"
                   data-quantity="{{Value}}"
                   data-quantity-min="{{Min}}"
                   data-quantity-max="{{Max}}"
                   data-oc-change="changeQuantity"
                   value="{{Value}}"
                   {{#if ../Disabled}} disabled="disabled" {{/if}} />
            <div class="input-group-append">
                <button class="btn  btn-outline-secondary" aria-hidden="true"
                    {{#if_eq ../Disabled false}}
                        {{#if_eq Value Max}}
                        disabled="disabled"
                        {{else}}
                        data-oc-click="incrementQuantity"
                        {{/if_eq}}
                    {{else}}
                        disabled="disabled"
                    {{/if_eq}}
                        data-qa="product-quantity-increase" tabindex="-1">
                    <span class="fa  fa-plus" aria-hidden="true"></span>
                    <span class="sr-only">{{localize 'ProductPage' 'B_Increment'}}</span>
                </button>
            </div>
        </div>
    </div>
    {{/with}}
</div>
{{/if}}