<div data-oc-controller="Product.ProductDetail" data-productid="{{Id}}" data-context="{{JsonContext}}" vocab="http://schema.org/" typeof="Product">

    <div class="row">
        {{> ProductImages}}

        <div class="col-md-6">
            <div class="island">
                <h1 property="name" data-qa="product-title">{{DisplayName}}</h1>

                <span class="hidden" property="sku">{{Sku}}</span>

                {{#if Brand}}
                    <div class="h6" property="brand" data-qa="product-brand">{{Brand}}</div>
                {{/if}}
            </div>

            {{> KvaItems}}

            <div class="row">
                <div class="col-sm-6  col-md-5  col-lg-4  col-xl-3">
                    {{> ProductQuantity}}
                </div>
            </div>

            <div class="island" property="offers" typeof="Offer">
                {{> PriceDiscount}}
            </div>

            <div class="mb-4">
                {{> AddToCartProductDetail}}
                {{> AddToWishList}}
            </div>
        </div>
    </div>

</div>
<div class="card mb-4">
	<div class="card-body">{{>StoreInventoryLink}}</div>
</div>

{{> ProductZoom}}