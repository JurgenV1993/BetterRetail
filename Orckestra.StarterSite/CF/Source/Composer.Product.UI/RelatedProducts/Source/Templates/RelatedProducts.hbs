<div class="row justify-content-center" data-templateid="RelatedProducts">
    {{#if Products}}
        <div class="col-lg-10" style="{{BackgroundStyle}}">
            <hr />
            <h2>{{HeadingComponentText}}</h2>
            <div class="carousel">
                <div class="row js-slick-carousel" data-slick='{"slidesToShow": 4, "slidesToScroll": 4, "mobileCarousel": true}' >
                    {{#each Products}}
                        {{> RelatedProduct}}
                    {{/each}}
                </div>
            </div>
        </div>
    {{/if}}
</div>
