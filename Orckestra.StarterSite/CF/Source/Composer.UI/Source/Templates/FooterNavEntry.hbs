<div data-templateid="FooterNavList">
    <nav class="hidden-xs">
        <ul class="nav-footer-entry list-unstyled" role="presentation">
            <li>
                <h4>
                    {{#if HasChildren}}
                        {{#if Url}}
                            <a href="{{Url}}"  target="{{UrlTarget}}" style="{{CssClass}}">{{DisplayName}}</a>
                        {{else}}
                            <a href="{{Url}}"  target="{{UrlTarget}}" class="footer-nolink" style="{{CssClass}}">{{DisplayName}}</a>
                        {{/if}}
                    {{else}}
                        <a data-qa="footer-section" href="{{Url}}"  target="{{UrlTarget}}" style="{{CssClass}}">{{DisplayName}}</a>
                    {{/if}}
                </h4>
                <ul class="nav nav-text nav-stacked nav-footer-list" role="presentation">
                    {{#each Children}}
                        <li>
                            <a data-qa="footer-link" href="{{Url}}" target="{{UrlTarget}}"  style="{{CssClass}}">{{DisplayName}}</a>
                        </li>
                    {{/each}}
                </ul>
            </li>
        </ul>
    </nav>
  <ul class="nav-footer-entry list-unstyled collapse-mobile hidden-sm hidden-md hidden-lg">
    <li> 
      <h4 id="{{@index}}">

         {{#if HasChildren}}            
            <a role="button" data-toggle="collapse" href="#footer-collapse-{{@index}}" aria-expanded="false" aria-controls="footer-collapse-{{@index}}" style="{{CssClass}}">
                    {{DisplayName}}
                <span class="pull-right fa fa-chevron-down collapsed-icon" aria-hidden="true"></span>
                <span class="pull-right fa fa-chevron-up expanded-icon" aria-hidden="true"></span>
             </a>
         {{else}}
             <a data-qa="footer-section" href="{{Url}}"  target="{{UrlTarget}}" style="{{CssClass}}">{{DisplayName}}</a>              
         {{/if}}
      </h4> 
	  <div id="footer-collapse-{{@index}}" class="collapse" role="tabpanel" aria-expanded="false">
		  <ul class="nav nav-text nav-stacked nav-footer-list">
          {{#each Children}}              
              <li>
                  <a data-qa="footer-link" href="{{Url}}" target="{{UrlTarget}}"  style="{{CssClass}}">{{DisplayName}}</a>
              </li>               
          {{/each}}            
      </ul>
	  </div>
    </li>
  </ul>

</div>