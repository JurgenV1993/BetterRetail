<div data-templateid="FormErrorMessages">
    {{#if Errors}}
    <div class="alert alert-danger" role="alert">
        <div id="formErrors">
            {{#each Errors}}
                {{#if LocalizedErrorMessage}}
                    <div class="multiline-message" tabindex="0">
                        <span class="fa  fa-times-circle-o  fa-lg  multiline-message-icon" aria-hidden="true"></span>&#32;
                        <span>{{{LocalizedErrorMessage}}}</span>
                    </div>
                {{else}}
                    <div class="multiline-message" tabindex="0">
                        <span class="fa  fa-times-circle-o  fa-lg  multiline-message-icon" aria-hidden="true"></span>&#32;
                        <span>{{localize 'Errors' 'L_NoLocalizedErrorMessage'}}</span>&#32;
                        <span class="text-warning">[{{ErrorCode}}]</span>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
    {{/if}}
</div>
