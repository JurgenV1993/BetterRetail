{{#if_neq InvalidLineItemCount 0}}
<div class="card">
    <div class="card-header text-white bg-dark">
        <div class="row">
            <div class="col-sm-10">
                <h2 class="h3" data-qa="checkout-header-cart-details">{{localize 'ShoppingCart' 'T_UnavailableItems'}}</h2>
            </div>
            <div class="col-sm-2">
                <a href="{{OrderSummary.CheckoutStepUrls.[0]}}" class="float-right text-white" title="{{localize 'CheckoutProcess' 'B_Edit'}}">
                    <span class="fa  fa-pencil  fa-lg" aria-hidden="true"></span>
                    <span class="sr-only">{{localize 'CheckoutProcess' 'B_Edit'}}</span>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        {{#if GettingCart}}
            {{>Loading}}
        {{else}}
                {{#if_neq InvalidLineItemCount 0}}
                    <div class="alert alert-danger">
                        <div class="multiline-message">
                            <span class="fa  fa-exclamation-triangle  multiline-message-icon" aria-hidden="true"></span>
                            <span>{{InvalidLineItemCount}} {{localize 'ShoppingCart' 'L_NoMoreAvailable'}}</span>
                        </div>
                    </div>
                {{/if_neq}}

                {{#each LineItemDetailViewModels}}
                    {{#unless IsValid}}
                          {{>CheckoutCompleteCartLineItem}}
                    {{/unless}}
        	    {{/each}}
        {{/if}}
    </div>
</div>
{{/if_neq}}

{{#if_neq InvalidLineItemCount LineItemCount}}
<div class="card">
    <div class="card-header text-white bg-dark">
        <div class="row">
            <div class="col-sm-10">
                <h2 class="h3" data-qa="checkout-header-cart-details">{{localize 'MyAccount' 'T_CartDetails'}}</h2>
            </div>
            <div class="col-sm-2">
                <a href="{{OrderSummary.CheckoutStepUrls.[0]}}" class="float-right text-white" title="{{localize 'CheckoutProcess' 'B_Edit'}} {{localize 'MyAccount' 'T_CartDetails'}}">
                    <span class="fa  fa-pencil  fa-lg" aria-hidden="true"></span>
                    <span class="sr-only">{{localize 'CheckoutProcess' 'B_Edit'}}</span>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        {{#if GettingCart}}
            {{>Loading}}
        {{else}}
                {{#each LineItemDetailViewModels}}
            	    {{#if IsValid}}
                          {{>CheckoutCompleteCartLineItem}}
                    {{/if}}
            	{{/each}}
        {{/if}}
    </div>
</div>
{{/if_neq}}
