<div data-templateid="BillingAddressTemplate">
    <input type="radio"
           class="hidden"
           name="BillingAddressId"
           data-parsley-class-handler-selector="form"
           data-parsley-errors-container="#billing-address-errors"
           required="required" />
    <div>
        <a href="{{AddAddressUrl}}" class="hitbox">{{localize 'MyAccount' 'B_AddNewAddress'}}</a>
    </div>
    {{#if_neq Addresses.length 0}}<br/>{{/if_neq}}
    {{#each Addresses}}
        <div class="form-group" data-address-id="{{Id}}">
            <label for="billingaddress-{{@key}}" data-lineitemid="{{Id}}" class="select-block  {{#if_eq Id ../SelectedBillingAddressId}} active {{/if_eq}}">
                <span class="input-addon">
                    <input id="billingaddress-{{@key}}"
                        data-parsley-class-handler-selector="form"
                        data-parsley-errors-container="#billing-address-errors"
                        data-parent=".addresses"
                        class="input"
                        type="radio"
                        name="BillingAddressId"
                        value="{{Id}}"
                        required="required"
                        data-oc-change="changeBillingAddress"
                        {{#if_eq Id ../SelectedBillingAddressId}} checked="checked"{{/if_eq}} />
                </span>
                <span class="content  clearfix">
                    <!-- Address name -->
                    <strong class="float-md-right">{{AddressName}}</strong>
                    <br class="d-md-none" />
                    {{FirstName}} {{LastName}}<br/>
                    {{Line1}}<br/>
                    {{#if Line2}} {{Line2}}<br/> {{/if}}
                    {{PostalCode}} - {{City}}, {{RegionCode}}<br/>
                    {{PhoneNumber}}

                    <span class="block  pull-right">
                        <a class="btn  btn-link" data-qa="checkout-address-edit" href="{{UpdateAddressUrl}}" title="{{localize 'MyAccount' 'B_EditAddress'}}">
                            <span class="fa  fa-pencil  fa-lg" aria-hidden="true"></span>
                            <span class="sr-only">{{localize 'MyAccount' 'B_EditAddress'}}</span>
                        </a>

                        <button type="button" class="btn  btn-link" data-qa="address-delete" data-oc-click="deleteAddressConfirm" title="{{localize 'MyAccount' 'B_DeleteAddress'}}">
                            <span class="fa  fa-trash-o  fa-lg" aria-hidden="true"></span>
                            <span class="sr-only">{{localize 'MyAccount' 'B_DeleteAddress'}}</span>
                        </button>
                    </span>
                </span>
            </label>
        </div>
    {{/each}}

    {{> BillingAddressConfirmationModal}}

    <div id="billing-address-errors"></div>
</div>