<div data-templateid="AddressList" class="card">
    <div class="card-header text-white bg-dark">
        <h2 class="h3">{{localize 'MyAccount' 'T_MyAddresses'}}</h2>
    </div>

    <div class="card-body">
        {{#each Addresses}}
            {{#if IsPreferredShipping}}
                {{>AddressListItem}}
            {{/if}}
        {{/each}}

        <div class="form-group">
            <a href="{{AddAddressUrl}}" class="hitbox" title="{{localize 'MyAccount' 'B_AddNewAddress'}}">{{localize 'MyAccount' 'B_AddNewAddress'}}</a>
        </div>

        {{#each Addresses}}
            {{#unless IsPreferredShipping}}
                {{>AddressListItem}}
            {{/unless}}
        {{/each}}
    </div>
</div>
{{> AddressConfirmationModal}}
