<div data-templateid="MyAccountMenu">
    <div class="card d-none d-lg-block">
        <div class="card-body">
            <h2 class="h4">{{localize 'MyAccount' 'L_MyAccount'}}</h2>
            <nav>
                <ul class="list-unstyled">
                    {{#each MenuItems}}
                        <li><a href="{{Url}}"{{#if IsActive}} aria-describedby="current"{{/if}}>{{#if IsActive}}<strong>{{/if}}{{Name}}{{#if IsActive}}</strong>{{/if}}</a></li>
                    {{/each}}
                </ul>
                <span id="current" class="sr-only">{{localize 'MyAccount' 'L_CurrentPage'}}</span>
            </nav>
        </div>
    </div>

    <div class="form-group d-lg-none">
        <div class="dropdown">
            <button class="btn  btn-outline-secondary  dropdown-toggle" type="button" id="dropdownMyAccount" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                {{localize 'MyAccount' 'L_MyAccount'}}
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMyAccount">
                {{#each MenuItems}}
                    <li><a href="{{Url}}">{{#if IsActive}}<strong>{{/if}}{{Name}}{{#if IsActive}}</strong>{{/if}}</a></li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>