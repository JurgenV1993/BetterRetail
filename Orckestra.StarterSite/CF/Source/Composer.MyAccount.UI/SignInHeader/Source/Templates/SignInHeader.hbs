<a class="nav-link" data-templateid="SignInHeader"
   {{#if IsLoggedIn}}
   {{#if IsOnMyAccount}} class="logged-in" {{/if}}
   data-qa="login-my-account" href="{{Url}}" title="{{localize 'MyAccount' 'L_MyAccount'}}"
   {{else}}
   data-qa="login-sign-in" href="{{Url}}" title="{{localize 'MyAccount' 'L_SignIn'}}"
   {{/if}}
>
    <span class="fa  fa-user  fa-lg  sps--blw-show-inline-block" aria-hidden="true"></span>&#160;
    {{#unless IsLoading }}
        {{#if IsLoggedIn}}
            <span class="d-none d-lg-inline sps--blw-hidden">{{localize 'MyAccount' 'L_MyAccount'}}</span>
        {{else}}
            <span class="d-none d-lg-inline sps--blw-hidden">{{localize 'MyAccount' 'L_SignIn'}}</span>
        {{/if}}
    {{/unless}}
    {{#if IsLoading}}
        {{#if IsLoggedIn}}
            <span class="sr-only">{{localize 'MyAccount' 'L_MyAccount'}}</span>
        {{else}}
            <span class="sr-only">{{localize 'MyAccount' 'L_SignIn'}}</span>
        {{/if}}
    {{/if}}
</a>

