@using Orckestra.Composer.Providers
@using Orckestra.Composer.Search.Context
@inherits Composite.AspNet.Razor.RazorFunction

@functions {
    public override string FunctionDescription
    {
        get { return "Selected Facets"; }
    }

    public ISearchRequestContext SearchRequestContext { get; set; }
    public ILocalizationProvider LocalizationProvider { get; set; }
}

@{
    var searchViewModel = Facets.Requests.ProductSearch.GetSearchViewModel(SearchRequestContext);
    var selectedFacets = searchViewModel?.SelectedFacets;
}

@Facets.SelectedFacets.Render(selectedFacets, null, LocalizationProvider)
